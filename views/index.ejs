<div class="jumbotron vertical-center">
  <div class="container">

    <div class="home-card">
      <div class="card-body">
        <h4 class="card-title text-center home-card-title">Ekilikua</h4>
        <% if (currentUser) { %>
        <p class="card-text text-center home-card-text">Welcome <%= currentUser.name %></p>
        <% } %>
        <p class="card-text text-center home-card-text">
          Knowledge is infinite. What do you wish to learn today?
        </p>
      </div>
    </div>

    <div id="carouselExampleIndicators" class="carousel slide full-width" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://s3-us-west-2.amazonaws.com/melingoimages/Images/20110.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://gobeyondacademy.com/wp-content/uploads/2018/11/RCM-Music-Theory-Lesson.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://www.grandvalira.com/sites/default/files/images/0145.jpg" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <div class="login-div">
        <% if (currentUser) { %>
          <button onclick="location.href='/users/'" type="button" class="btn btn-primary mt-4 mb-2 home-user-button">Go to your homepage</button>
          <p>or <a href="/users/logout">Log out</a></p>
        <% } else { %>
          <button onclick="location.href='/auth/'" type="button" class="btn btn-primary mt-4 mb-2 login-button">Log in</button> 
          <p class="login-card-text">or <a href="/auth/signup">Sign up</a></p>    
        <% } %>
    </div>
  </div>
</div>

<ul>
  <% classes.forEach((lesson) => { %>
      <% const link = "/classes/"; %>
      <%- include('partials/miniclasscard', { lesson, link })%>
  <% }) %>
</ul>

<p></p>

<form action="/classes/query" method="get">
  <input type="text" name="query" id="">
  <input type="submit" value="Knowledge search">
</form>

<p><%= copyright %></p>