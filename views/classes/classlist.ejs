<nav>
  <ul>
      <% if (currentUser) { %>
        <li><a href="/users/">Go to your homepage</a></li>
        <li>
          <a href="/users/logout">Log out</a>
        </li>
      <% } else { %>
        <li>
          <a href="/auth">Log in</a>
        </li>
      <% } %>
    </ul>
</nav>
<br>

<% switch (view) {
  case 'all' : %>
    <h2>What do you want to learn today?</h2>
    <% break;
  case 'own' : %>
    <h2>Classes you want to teach</h2>
    <% break;
  case 'attending' : %>
    <h2>Classes you are attending</h2>
    <% break;
    case 'teaching' : %>
    <h2>Classes you are teaching</h2>
    <% break; } %>

<ul>
  <% classes.forEach((lesson) => { %>
    <li class="list-group-item">
      <% if (view === 'own' || view === 'attending' || view === 'teaching') { %>
        <a href="../classes/<%= view %>/<%= lesson._id %>">
      <% } else { %>
        <a href="/classes/<%= lesson._id %>">
      <% } %>
      <%= lesson.title %>
      </a>
    </li>
  <% })%>
</ul>
<% if (view === 'own') { %>
  <a href="/users/classes/new">New class</a>
<% } %>
<p><a href="/">Home</a></p>
